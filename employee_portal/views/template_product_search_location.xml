<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="product_searchby_location" name="Product's Search">
        <t t-call="website.layout">
            <div class="oe_structure"/>
            <div class="container">
                <div>
                    <script>
                        function startTime() {
                        var today = new Date();
                        var h = today.getHours();
                        var m = today.getMinutes();
                        var s = today.getSeconds();
                        m = checkTime(m);
                        s = checkTime(s);
                        document.getElementById('txt').innerHTML =
                        h + ":" + m + ":" + s;
                        document.getElementById("datetime").innerHTML = today.toLocaleDateString();
                        var t = setTimeout(startTime, 500);
                        }
                        function checkTime(i) {
                        if (i &lt; 10) {i = "0" + i};  // add zero in front of numbers &lt; 10
                        return i;
                        }
                    </script>
                    <body onload="startTime()">
                        <div class="col-lg-12" style="font-family:verdana;font-size:120%;">
                            <strong>Date:</strong> <span id="datetime"/>
                            <strong>Time:</strong> <span id="txt"/>
                        </div>
                    </body>
                </div>
                <div>
                    <style>
                        table {
                        font-family: arial, sans-serif;
                        }
                        td, th{
                        text-align:center;
                        }
                        .btn-primary{
                        color: #fff;
                        background-color: #7C7BAD;
                        border-color: #7C7BAD;
                        }
                        .btn-primary:hover{
                        color: #fff;
                        background-color: #7C7BAD;
                        border-color: #7C7BAD;
                        }
                        a{
                        color: #5f5e97;
                        }
                        a:hover{
                        color: #5f5e97;
                        }
                        .btn-primary:not(:disabled):not(.disabled):active, .btn-primary:not(:disabled):not(.disabled).active, .show > .btn-primary.dropdown-toggle {
                        color: #fff;
                        background-color: #5f5e97;
                        border-color: #5f5e97;
                        }
                    </style>
                    <form action="/product/search_by/location/" method="post" class="s_website_form container-fluid mt32">
                        <div class="col-lg-12" align="right;">
                            <input type="text" id="search" name="search_products"/>
                            <button type="submit" class="fa fa-search btn btn-primary"/>
                        </div>
                    </form>
                    <div>
                        <h1> </h1>
                    </div>
                    <div class="col-lg-12">
                        <table class="table table-bordered">
                            <tr>
                                <th>
                                    Product Name
                                </th>
                                <th>
                                    Internal Reference
                                </th>
                                <th>
                                    Barcode
                                </th>
                                <th>
                                    Qty on Hand
                                </th>
                                <th>
                                    Unit of Measure
                                </th>
                            </tr>
                            <t t-foreach="products_location" t-as="loc">
                                <tr>
                                    <td>
                                        <span><t t-esc="loc.product_id.name"/></span>
                                    </td>
                                    <td>
                                        <span><t t-esc="loc.product_id.default_code"/></span>
                                    </td>
                                    <td>
                                        <span><t t-esc="loc.product_id.barcode"/></span>
                                    </td>
                                    <td>
                                        <span><t t-esc="loc.quantity"/></span>
                                        <span>(<t t-esc="loc.location_id.name"/>)</span>
                                    </td>
                                    <td>
                                        <span><t t-esc="loc.product_id.uom_id.name"/></span>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>